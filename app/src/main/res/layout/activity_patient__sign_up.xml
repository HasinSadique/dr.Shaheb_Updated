<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/BlurImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/backgroundwallpaper" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextiewDoctorsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient's Information"
            android:fontFamily="cursive"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="45dp"
            />
        <EditText
            android:id="@+id/EditTextFullName"
            android:inputType="text"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" Full Name"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@id/EditTextEmail"
            android:layout_below="@id/TextiewDoctorsInfo"
            android:maxLength="30"/>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/username"
            android:layout_alignBottom="@id/EditTextFullName"/>

        <EditText
            android:id="@+id/EditTextAge"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" Age"
            android:inputType="text"
            android:layout_below="@id/EditTextEmail"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ImageViewAge"
            android:maxLength="14"/>

        <ImageView
            android:id="@+id/ImageViewAge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/age"
            android:layout_alignBottom="@id/EditTextAge"
            android:layout_below="@+id/EditTextEmail"
            />

        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_width="match_parent"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_height="35dp"
            android:hint=" Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@id/EditTextAge"
            android:layout_below="@id/EditTextFullName"

            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/email"
            android:layout_alignBottom="@id/EditTextEmail"
            />
        <ImageView
            android:id="@+id/ImageViewMobile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mobile"
            android:layout_alignBottom="@id/EditTextMobile"
            />
        <EditText
            android:id="@+id/EditTextMobile"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" Mobile"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_toRightOf="@id/ImageViewPassword"
            android:layout_below="@id/EditTextAge"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/EditTextPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" Password"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_toRightOf="@id/ImageViewPassword"
            android:layout_below="@id/EditTextMobile"
            android:maxLength="20"  />
        <ImageView
            android:id="@+id/ImageViewPassword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/password"
            android:layout_alignBottom="@id/EditTextPassword"/>

        <EditText
            android:id="@+id/EditTextRetypePassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" Re-Type Password"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/ImageViewPassword"
            android:layout_below="@id/EditTextPassword"
            android:background="#11000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:maxLength="20" />
        <ImageView
            android:id="@+id/ImageViewReTypePassword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/password"
            android:layout_alignBottom="@id/EditTextRetypePassword"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Register"
            android:textSize="17dp"
            android:onClick="Register"
            android:layout_marginTop="15dp"
            android:layout_below="@id/EditTextRetypePassword"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            />

</RelativeLayout>


</RelativeLayout>
